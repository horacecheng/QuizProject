<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity = "center"
         android:padding="10dp"
         android:text="@string/userProfile"
         android:textSize="28sp" 
         android:textColor="@color/white"
         android:textStyle="bold"/>
     
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/email"
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/emailTextView"
            android:text="@string/email"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/siquoiaPointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/siquoiaPoints" 
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/siquoiaPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/siquoiaPointsTextView"
            android:text="@string/siquoiaPoints"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/packetsBoughtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/packetsBought" 
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/packetsBought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/packetsBoughtTextView"
            android:text="@string/packetsBought"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/memorabiliaBoughtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/memorabiliaBought" 
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/memorabiliaBought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/memorabiliaBoughtTextView"
            android:text="@string/memorabiliaBought"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/totalPointsSpentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/totalPointsSpent" 
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/totalPointsSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/totalPointsSpentTextView"
            android:text="@string/totalPointsSpent"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>
    
             
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/totalPointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/totalPoints" 
            android:padding="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/totalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/totalPointsTextView"
            android:text="@string/totalPoints"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="28sp" />
    </RelativeLayout>

</LinearLayout>
